---
import { menuMain } from "~/data/menus.js";
import LogoHeader from "~/assets/images/logo-header.png";

const rmTrailingSlash = (p: string) =>
	p.endsWith("/") && p.length > 1 ? p.slice(0, -1) : p;

const pathname = rmTrailingSlash(Astro.url.pathname);
---

<style>
	/* underline animado ------------------------------------------------------ */
	.link-underline::after {
		@apply block h-[2px] mx-auto w-full scale-x-0 origin-center
			 transition-transform duration-300;
	}
	.link-underline:hover::after,
	.link-underline-active::after {
		@apply scale-x-100;
	}
	/* foco teclado visível --------------------------------------------------- */
	.link-underline:focus-visible {
		@apply outline-2;
	}
</style>

<header
	x-data="{ open: false }"
	@keydown.window.escape="open = false"
	style={`background-image:url(${LogoHeader.src});`}
	class="relative isolate z-30 flex items-center bg-center bg-cover h-48 md:h-56 lg:h-64"
>
	<!-- GRADIENT overlay -->
	<div
		class="absolute inset-0 -z-10 bg-gradient-to-b from-black/40 via-black/20 to-black/0"
	>
	</div>

	<!-- NAV BAR -->
	<div class="container mx-auto px-4 w-full relative z-10 pt-75">
		<nav class="flex items-center justify-center" aria-label="Global">
			<span class="sr-only">Recanto e Sabor</span>

			<!-- BOTÃO HAMBURGER -->
			<div class="flex lg:hidden">
				<button
					type="button"
					class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-white"
					@click="open = true"
				>
					<span class="sr-only">Open main menu</span>
					<svg
						class="size-8"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="1.5"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
						></path>
					</svg>
				</button>
			</div>

			<!-- LINKS DESKTOP -->
			<div class="hidden lg:flex lg:items-center gap-x-8 md:gap-x-12">
				{
					menuMain.map((item) => (
						<a
							href={item.url}
							class={`link-underline uppercase tracking-wide transition text-lg lg:text-xl font-semibold text-black hover:text-brand-green
                ${item.highlighted ? "menu-item-highlighted" : ""}
                ${pathname === item.url ? "link-underline-active" : ""}`}
						>
							{item.name}
						</a>
					))
				}
			</div>
		</nav>
	</div>

	<!-- MENU MOBILE -->
	<div
		class="lg:hidden"
		x-ref="dialog"
		x-show="open"
		x-cloak
		aria-modal="true"
	>
		<div
			class="fixed inset-0 z-50 w-full overflow-y-auto bg-white px-8 py-6"
			x-show="open"
			x-transition:enter="transition ease-out"
			x-transition:enter-start="opacity-0"
			x-transition:enter-end="opacity-100"
			x-transition:leave="transition ease-in"
			x-transition:leave-start="opacity-100"
			x-transition:leave-end="opacity-0"
			x-cloak
		>
			<div class="flex items-center justify-between">
				<a href="/" class="-m-1.5 p-1.5">
					<p class="font-bold text-4xl text-brand-green">
						Astro<span class="text-brand-red">Pie</span>
					</p>
				</a>
				<button
					type="button"
					class="-m-2.5 p-2.5 text-brand-red"
					@click="open = false"
				>
					<span class="sr-only">Close menu</span>
					<svg
						class="size-8"
						fill="none"
						viewBox="0 0 24 24"
						stroke-width="2"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							d="M6 18 18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>

			<div class="mt-6 flow-root">
				<div class="-my-6 divide-y divide-gray-500/10">
					<div class="space-y-2 py-6 mt-16">
						{
							menuMain.map((item) => (
								<a
									@click="open = false"
									href={item.url}
									class={`block py-2 text-center font-semibold text-3xl
                    ${item.highlighted ? "menu-item-highlighted w-max mx-auto !px-8 !py-2" : ""}
                    ${pathname === item.url ? "link-underline-active" : ""}`}
								>
									{item.name}
								</a>
							))
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</header>
